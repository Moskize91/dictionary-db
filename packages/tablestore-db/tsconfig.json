{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "es6",
    "jsx": "react",
    "forceConsistentCasingInFileNames": false,
    "lib": [
      "es6",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*",
    "./types/index.d.ts",
    "../../node_modules/@types/**/index.d.ts"
  ]
}
