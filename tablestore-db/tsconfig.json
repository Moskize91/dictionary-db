{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist/dev",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "es6",
    "target": "es6",
    "lib": [
        "es6",
        "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "types": []
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./types",
    "../node_modules/@types/**/index.d.ts"
  ]
}
